<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Background color when button is pressed -->
            <corners android:radius="16dp" /> <!-- Button corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Default background color -->
            <corners android:radius="16dp" /> <!-- Button corner radius -->
        </shape>
    </item>
</selector>
