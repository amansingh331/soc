<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical">

    <!-- First Name -->
    <TextView
        android:id="@+id/fullNameLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Name*" />

    <EditText
        android:id="@+id/full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter full name here"
        android:layout_marginBottom="20dp"/>



    <!-- College -->
    <TextView
        android:id="@+id/collegeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="College/School*" />

    <EditText
        android:id="@+id/collegeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter college/School name here"
        android:layout_marginBottom="20dp"/>


    <!-- Bio -->
    <TextView
        android:id="@+id/bioLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio*" />

    <EditText
        android:id="@+id/bioEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter bio here"
        android:layout_marginBottom="20dp"/>


    <!-- Place -->
    <TextView
        android:id="@+id/placeHeadlineLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Place*" />

    <EditText
        android:id="@+id/placeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter place here"
        android:layout_marginBottom="20dp"/>


    <!--    headline-->
    <TextView
        android:id="@+id/placeHeadlineLabel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Headline*" />

    <EditText
        android:id="@+id/placeHeadlineEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter headline here"
        android:layout_marginBottom="20dp"/>

    <ProgressBar
        android:id="@+id/progressbar_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/placeHeadlineEditText"
        android:visibility="gone"
        android:layout_gravity="center"
        style="@style/CustomProgressBar"/>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"/>

</LinearLayout>
